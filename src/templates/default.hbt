<!doctype html>
<html lang="en">
    {{> head }}
    <body class="theme">
        {{> header }}
        <div class="row">
            <div class="theme__wrap">
                <div class="col-3 theme__sidebar">
                    <nav class="p-sidebar-nav">
                        {{> sidebar }}
                    </nav>
                </div>
                <div class="col-12 theme__main">
                    <main id="main-content" class="theme__inner">
                        <h1>{{title}}</h1>
                        {{{ contents }}}
                    </main>
                </div>
            </div>
        </div>
        {{> footer }}
    </body>
</html>
